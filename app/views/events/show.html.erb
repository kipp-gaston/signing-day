<div class="row">
  <div class="span12">
    <h1>Our Progress: <small>$<span id="donation-total"><%= number_with_delimiter(event.current_donation_amount.to_i) %></span> of <%= number_to_currency(event.donation_goal, precision: 0) %> Goal</small></h1>
    <div class="progress">
      <div class="progress-bar progress-bar-info progress-bar-striped" role="progressbar" aria-valuenow="<%= 100 * event.current_donation_amount / event.donation_goal %>" aria-valuemin="0" aria-valuemax="100" style="width: <%= 100 * event.current_donation_amount / event.donation_goal %>%">
        <span class="sr-only"><%= 100 * event.current_donation_amount / event.donation_goal %>% Complete</span>
      </div>
    </div>
  </div>
</div>

<hr>
<div class="row">
  <div class="col-md-8">
    <%- if event.livestream_url -%>
      <iframe src="<%= event.livestream_url %>" style="border: 0 none transparent;" frameborder="no" width="620" height="350"></iframe>
    <%- elsif event.video_url -%>
      <iframe src="<%= event.video_url %>" width="620" height="350" frameborder="0" webkitAllowFullScreen mozallowfullscreen allowFullScreen></iframe>
    <%- end -%>
  </div>

  <div class="col-md-4">
    <h2>Make a Donation</h2>
    <p><%= event.donation_text %></p>

    <%= form_for :donation, url: donate_path(year: event.year), method: :post, html: { class: "form-inline" } do %>
      <div class="form-group">
        <label class="sr-only" for="exampleInputAmount">Amount (in dollars)</label>
        <div class="input-group">
          <div class="input-group-addon">$</div>
          <input type="text" class="form-control" id="exampleInputAmount" placeholder="Amount" name="amount">
        </div>
      </div>
      <button type="submit" class="btn btn-primary">Donate</button>
    <% end %>

    <div class="social-buttons">
      <div class="fb-like fb_edge_widget_with_comment fb_iframe_widget" data-href="http://www.facebook.com/KippGastonCollegePreparatoryPublicSchools" data-send="true" data-layout="button_count" data-width="270" data-show-faces="true" fb-xfbml-state="rendered"><span style="height: 20px; width: 138px;"><iframe id="f37bc44cc8" name="fce7d4f2" scrolling="no" style="border: none; overflow: hidden; height: 20px; width: 138px;" title="Like this content on Facebook." class="fb_ltr" src="http://www.facebook.com/plugins/like.php?api_key=&amp;locale=en_US&amp;sdk=joey&amp;channel_url=http%3A%2F%2Fstatic.ak.facebook.com%2Fconnect%2Fxd_arbiter.php%3Fversion%3D23%23cb%3Df20a511a84%26origin%3Dhttp%253A%252F%252Fkippgaston.org%252Ff3e59f39f4%26domain%3Dkippgaston.org%26relation%3Dparent.parent&amp;href=http%3A%2F%2Fwww.facebook.com%2FKippGastonCollegePreparatoryPublicSchools&amp;node_type=link&amp;width=270&amp;layout=button_count&amp;colorscheme=light&amp;show_faces=false&amp;send=true&amp;extended_social_context=false"></iframe></span></div>

